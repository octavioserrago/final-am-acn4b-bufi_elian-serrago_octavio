<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/editTextFoodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#007AFF"
        android:hint="Food Name"
        app:layout_constraintBottom_toBottomOf="@id/buttonSaveFood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />


    <EditText
        android:id="@+id/editTextImgUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Image URL"
        android:backgroundTint="#007AFF"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextFoodName"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="16dp"/>


    <EditText
        android:id="@+id/editTextKcals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Calories"
        android:inputType="numberDecimal"
        android:backgroundTint="#007AFF"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextImgUrl"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/buttonSaveFood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Food"
        android:backgroundTint="#007AFF"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextKcals"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#007AFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
